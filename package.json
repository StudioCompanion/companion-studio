{
  "name": "@studiocompanion/website--root",
  "version": "2.0.0",
  "private": true,
  "author": {
    "name": "Josh Ellis<josh@companion.studio>"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/StudioCompanion/companion-studio"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "> 0.25%"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "scripts": {
    "lint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
    "prepare": "husky install",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check .",
    "build-storybook": "build-storybook -s packages/web/public",
    "storybook": "start-storybook -s packages/web/public -p 6006",
    "web:dev": "yarn workspace @studiocompanion/web dev",
    "web:build": "yarn workspace @studiocompanion/web build",
    "web:start": "yarn workspace @studiocompanion/web start",
    "chromatic": "npx chromatic --project-token=1a465065bcd3"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@mdx-js/loader": "^2.0.0-rc.2",
    "@next/mdx": "^12.0.4",
    "@storybook/addon-actions": "6.3.12",
    "@storybook/addon-essentials": "6.3.12",
    "@storybook/react": "6.3.12",
    "@studiocompanion/scripts": "^1.2.0",
    "@types/node": "^16.11.0",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.15",
    "babel-plugin-styled-components": "^1.13.3",
    "chromatic": "^6.0.6",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "prop-types": "^15.7.2",
    "remark-frontmatter": "^4.0.1"
  },
  "packageManager": "yarn@3.1.1"
}
