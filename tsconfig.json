{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "baseUrl": "./packages/web",
    "paths": {
      "components/*": ["./src/client/components/*"],
      "data/*": ["./src/data/*"],
      "helpers/*": ["./src/client/helpers/*"],
      "hooks/*": ["./src/client/hooks/*"],
      "references/*": ["./src/client/references/*"],
      "server/*": ["./src/server/*"],
      "services/*": ["./src/server/services/*"],
      "styles/*": ["./src/client/styles/*"],
      "@types": ["./src/types"]
    }
  },
  "include": ["*.d.ts", "packages/**/*", "*.*.js", "*.*.ts"],
  "exclude": ["node_modules"]
}
